// Dynamic Timeline component that fetches and displays subject-specific timelines
function DynamicTimeline({ subject }: { subject: string }) {
  const [dynamicTimeline, setDynamicTimeline] = useState<Array<{year: string, title: string, description: string}>>([]);
  const [isLoadingTimeline, setIsLoadingTimeline] = useState(true);
  const [timelineError, setTimelineError] = useState<string | null>(null);
  
  // Add debugging for visibility
  console.log("Timeline subject:", subject);
  
  // Fetch the dynamic timeline from our API
  useEffect(() => {
    if (!subject) return;
    
    setIsLoadingTimeline(true);
    setTimelineError(null);
    
    fetch(`/api/timeline/${encodeURIComponent(subject)}`)
      .then(response => {
        if (!response.ok) {
          throw new Error(`Timeline request failed with status ${response.status}`);
        }
        return response.json();
      })
      .then(data => {
        console.log("Dynamic timeline data:", data);
        if (data.timeline && Array.isArray(data.timeline)) {
          setDynamicTimeline(data.timeline);
        } else {
          setTimelineError("Invalid timeline data received");
        }
      })
      .catch(err => {
        console.error("Error fetching timeline:", err);
        setTimelineError(`Failed to load timeline: ${err.message}`);
      })
      .finally(() => {
        setIsLoadingTimeline(false);
      });
  }, [subject]);
  
  // Show loading state while timeline is being generated
  if (isLoadingTimeline) {
    return (
      <div className="flex justify-center items-center py-8">
        <div className="flex flex-col items-center">
          <div className="animate-spin rounded-full h-10 w-10 border-b-2 border-primary-600 mb-3"></div>
          <p className="text-sm text-gray-600">Generating timeline for {subject}...</p>
        </div>
      </div>
    );
  }
  
  // Display the dynamic timeline when loaded
